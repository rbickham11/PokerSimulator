@model PokerSimulator.Web.Models.SimulationRequestModel

@{
    ViewBag.Title = "Index";
}

<h2>Texas Hold 'em Hand Simulator</h2>
<h4>New Simulation</h4>
<hr />

@using (Html.BeginForm("HoldemResult", "Simulator", FormMethod.Post))
{
<div class="row">
    <div class="col-md-4">
        <h4>Set Hands</h4>
        <div id="handsForm" class="form-horizontal">
            <hr />
        </div>
        <button type="button" class="btn btn-success" id="addHand">Add Hand</button>
        <button type="button" class="btn btn-danger" id="removeHand">Remove Hand</button>
    </div>
    <div class="col-md-4">
        <h4>Options</h4>
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.RandomHands, new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.TextBoxFor(model => model.RandomHands, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(model => model.RandomHands)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.HandsToSimulate, new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.TextBoxFor(model => model.HandsToSimulate, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(model => model.HandsToSimulate)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RandomChange, new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.EditorFor(model => model.RandomChange)
                    @Html.ValidationMessageFor(model => model.RandomChange)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <input type="submit" value="Run" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/simulator.js")
}
